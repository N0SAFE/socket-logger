{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "esnext",
    "module": "CommonJS",
    "lib": [
      "es2018",
      "dom"
    ],
    "allowJs": true,
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@@/*": [
        "src/__tests__/*"
      ]
    }
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "src/**/*.spec.ts",
    "dist/**/*",
    ".eslintrc.js",
    "src/__tests__/**/*",
  ],
}